<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="AppColors.xaml" />
  </ResourceDictionary.MergedDictionaries>
  <Style x:Key="ContentArea" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource DefaultBackgroundColor}" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>
  <Style x:Key="UnreadBorder" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource PanelSecondaryColor}" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>
  <Style x:Key="Divider" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource DefaultBorderColor}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="{StaticResource DefaultBorderColor}" />
    <Setter Property="Height" Value="2" />
  </Style>
  <Style x:Key="FieldArea" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource DefaultBackgroundColor}" />
    <!--<Setter Property="BorderThickness" Value="{StaticResource PhoneBorderThickness}" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />-->
    <Setter Property="BorderBrush" Value="{StaticResource DefaultBorderColor}" />
  </Style>
</ResourceDictionary>
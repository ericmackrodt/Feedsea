<UserControl x:Class="feedsea.UserControls.AudioPlaybackControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignHeight="480" d:DesignWidth="480">
  <Grid x:Name="LayoutRoot" Background="{StaticResource DefaultBackgroundColor}">
    <Grid Margin="15,5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Button Style="{StaticResource FramelessButton}" Click="Button_Click">
        <Image x:Name="imgPlay" Grid.Column="0" Height="32" Width="32" Margin="4" Source="../Assets/Icons/play.png" Stretch="Uniform"></Image>
      </Button>
      <TextBlock Grid.Column="1" Margin="10" x:Name="txtPlay" Text="{Binding Path=LocalizedResources.AudioFile_Play, Source={StaticResource LocalizedStrings}}" Style="{StaticResource DefaultFieldLabel}" />
      <TextBlock Grid.Column="2" Margin="0,10,10,10" x:Name="txtTitle" Style="{StaticResource DefaultFieldLabel}" TextWrapping="NoWrap" />
      <!--<Grid.RenderTransform>
            <ScaleTransform  x:Name="LoadingScaleTransform" ScaleY="0" />
        </Grid.RenderTransform>-->
    </Grid>
  </Grid>
  <!--FontSize="{StaticResource PhoneFontSizeNormal}"-->
</UserControl>